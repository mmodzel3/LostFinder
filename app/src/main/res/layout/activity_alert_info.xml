<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/ic_border">

    <TextView
        android:id="@+id/activity_alert_tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_weight="0"
        android:gravity="center"
        android:paddingStart="8dp"
        android:paddingLeft="8dp"
        android:paddingEnd="8dp"
        android:paddingRight="8dp"
        android:text="@string/activity_alert_example_time_text"
        android:textColor="@color/gray"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_yellow_alert"
        app:drawableLeftCompat="@drawable/ic_yellow_alert" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.1" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.8"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:background="@drawable/ic_purple_rounded_rectangle">

        <TextView
            android:id="@+id/activity_alert_tv_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="8dp"
            android:paddingLeft="8dp"
            android:paddingTop="4dp"
            android:paddingEnd="24dp"
            android:paddingRight="24dp"
            android:gravity="end"
            android:text="@string/activity_alert_user_name_example_text"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_alert_tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginRight="18dp"
                    android:padding="12dp"
                    android:layout_weight="1"
                    android:text="@string/activity_alert_title_example_text"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginEnd="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="0"
                    android:background="@drawable/ic_rounded_corners"
                    android:contentDescription="@string/activity_alert_button_end_alert_description"
                    android:src="@drawable/ic_cancel" />

            </LinearLayout>

            <View
                android:id="@+id/activity_alert_vw_splitter"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/white" />

            <TextView
                android:id="@+id/activity_alert_tv_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="18dp"
                android:layout_marginLeft="18dp"
                android:layout_marginEnd="18dp"
                android:layout_marginRight="18dp"
                android:padding="12dp"
                android:text="@string/activity_alert_description_example_text"
                android:textSize="14sp"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingStart="18dp"
                android:paddingLeft="18dp"
                android:paddingBottom="4dp"
                android:paddingEnd="18dp"
                android:paddingRight="18dp"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/activity_alert_tv_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="12dp"
                    android:paddingLeft="12dp"
                    android:paddingEnd="12dp"
                    android:paddingRight="12dp"
                    android:gravity="end"
                    android:text="@string/activity_alert_location_example_text"
                    android:textSize="12sp"
                    android:textColor="@color/light_gray" />

                <TextView
                    android:id="@+id/activity_alert_tv_range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:text="@string/activity_alert_range_example_text"
                    android:textSize="12sp"
                    android:textColor="@color/white" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>