<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".security.authentication.login.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/activity_user_change_password_et_old_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="false"
            android:ems="10"
            android:hint="@string/activity_user_change_password_old_password"
            android:inputType="textPassword" />

        <View
            android:id="@+id/activity_login_dv_email_password"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/activity_user_change_password_et_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="false"
            android:ems="10"
            android:hint="@string/activity_user_change_password_new_password"
            android:inputType="textPassword" />

        <View
            android:id="@+id/activity_login_dv_password_save_password"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider"
            tools:visibility="invisible" />

        <EditText
            android:id="@+id/activity_user_change_password_et_repeated_new_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="false"
            android:ems="10"
            android:hint="@string/activity_user_change_password_repeated_new_password"
            android:inputType="textPassword" />

        <View
            android:id="@+id/activity_login_dv_save_password_password"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="?android:attr/listDivider"
            tools:visibility="invisible" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/activity_user_change_password_bt_change_password"
            android:text="@string/activity_user_change_password_change_password"
            android:enabled="false" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>